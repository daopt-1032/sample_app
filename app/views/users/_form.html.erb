<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <br>

      <%= f.submit "Create my account", class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
